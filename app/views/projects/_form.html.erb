
<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-container">
    <div class="field">
      <%= form.label :title , class: "form-label"%>
      <%= form.text_field :title,  class: "form-control",  placeholder: "Example : building a crypto platform"%>
    </div>

    <div class="field">
      <%= form.label :description,  class: "form-label" %>
      <%= form.text_area :description,  class: "form-control", placeholder: "Something about the project"%>
    </div>

    <div class="actions" style="margin-top: 1.5em">
      <%= form.submit class: "btn btn-primary"%>
    </div>
  </div>

<% end %>

<%= link_to "Back", projects_path %>



